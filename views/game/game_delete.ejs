<main>
  <div class="delete-form">
    <h1><%= title %></h1>
    <hr>

      <div class="delete-inputs">
        <h2>Are you sure that you want to delete this game?</h2>
        <form action="" method="POST">
          <label for="password">Admin Password</label>
          <input type="password" name="password" id="password" required placeholder="Please enter the password">
          <input type="hidden" name="gameid" required="true" value=<%= game._id %>>
          <button class="btn" type="submit">Delete</button>
        </form>
      </div>

      <div class="errors-list">
        <% if (typeof error != 'undefined') { %>
          <ul class="">
            <li><h2><%= error%></h2></li>
          </ul>
          <% } %>
        </div>
  </div>
</main>